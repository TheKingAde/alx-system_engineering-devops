#!/usr/bin/env bash
# Configure Nginx for custom 404 page
# Update package list and install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Create custom 404 page with the required string
echo "Ceci n'est pas une page" | sudo tee /usr/share/nginx/html/404.html > /dev/null

# Create a custom Nginx configuration file for the 404 page
echo "server {
    listen 80 default_server;
    listen [::]:80 default_server ipv6only=on;

    root /usr/share/nginx/html;
    index index.html index.htm;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
    }

    error_page 404 /404.html;
    location = /404.html {
        internal;
    }

    # Other configurations...
}" | sudo tee /etc/nginx/sites-available/custom_404 > /dev/null

# Enable the custom configuration
sudo ln -s /etc/nginx/sites-available/custom_404 /etc/nginx/sites-enabled/

# Restart Nginx to apply changes
sudo service nginx restart

# Display success message
echo "Nginx configured with custom 404 page."

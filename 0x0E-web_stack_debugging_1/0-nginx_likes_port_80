#!/usr/bin/env bash
# configures a server to run  and listening on port 80 of all the serverâ€™s active IPv4 IPs

# Check if nginx is installed
if ! command -v nginx &> /dev/null
then
    echo "Nginx is not installed. Installing..."
    # Update package list and install nginx
    sudo apt-get update
    sudo apt-get install -y nginx
else
    echo "Nginx is already installed."
fi

# Start nginx service
sudo service nginx start

# Check if nginx is running on port 80
if sudo netstat -tuln | grep ':80 ' | grep nginx &> /dev/null
then
    echo "Nginx is running on port 80."
else
    echo "Nginx is not running on port 80. Configuring..."
    # Backup original nginx configuration file
    sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak
    # Configure nginx to listen on port 80
    sudo sed -i 's/listen  .*/listen 80;/g' /etc/nginx/sites-available/default
    # Restart nginx service to apply changes
    sudo service nginx restart
fi

# Confirm nginx is running on port 80
if sudo netstat -tuln | grep ':80 ' | grep nginx &> /dev/null
then
    echo "Nginx is now running on port 80."
else
    echo "Failed to configure Nginx to run on port 80."
fi
